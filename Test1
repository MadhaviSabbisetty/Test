package com.tcs.fincore.CommonMasterService.service;
 
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.http.*;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

// import com.tcs.fincore.CommonMasterService.dto.ApiResponse;
// import com.tcs.fincore.CommonMasterService.dto.ApiResponse;
import com.tcs.fincore.CommonMasterService.dto.ReportClientServiceDTO;
 
@Service
public class ReportClientServiceImpl implements ReportClientService {
 
    @Autowired
    private RestTemplate restTemplate;
 
    @Value("${report.service.url}")
    private String reportServiceUrl;
 
    @Value("${internal.service.key}")
    private String internalServiceKey;
 
    @Override
    public String callReportHello() {
 
        HttpHeaders headers = new HttpHeaders();
        headers.set("X-Service-Key", internalServiceKey);
        headers.set("X-Service-Name", "COMMON_MASTER");
 
        HttpEntity<String> entity = new HttpEntity<>(headers);
 
        ResponseEntity<ReportClientServiceDTO> response =
                restTemplate.exchange(
                        reportServiceUrl + "/api/reports/hello",
                        HttpMethod.GET,
                        entity,
                        ReportClientServiceDTO.class
                );
                ReportClientServiceDTO reportClientServiceDTO=response.getBody();
        return reportClientServiceDTO.getData().toString();
    }
}



















package com.tcs.fincore.CommonMasterService.dto;

import lombok.Data;

@Data
public class ReportClientServiceDTO {
    
    private boolean success;
    private String message;
    private Object data;
    private String timestamp;
}
