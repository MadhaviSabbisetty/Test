import {
  Box,
  Drawer,
  LinearProgress,
  Stack,
  Typography,
  IconButton,
  Collapse,
} from "@mui/material";
import {
  Close,
  AccessTime,
  CheckCircleOutline,
  ErrorOutline,
  Help,
} from "@mui/icons-material";
import { useState } from "react";
import CustomChip from "../utils/CustomChip";

const statusColor = {
  PROCESSING: "warning",
  COMPLETED: "success",
  FAILED: "error",
};

const statusIcon = {
  PROCESSING: <AccessTime fontSize="small" />,
  COMPLETED: <CheckCircleOutline fontSize="small" />,
  FAILED: <ErrorOutline fontSize="small" />,
  default: <Help fontSize="small" />,
};

const TaskProgressDrawer = ({ open, onClose, tasks }) => {
  const [expanded, setExpanded] = useState(null);

  return (
    <Drawer anchor="right" open={open} onClose={onClose}>
      {/* HEADER */}
      <Box
        sx={{
          p: 3,
          borderBottom: "1px solid #E2E8F0",
          display: "flex",
          alignItems: "center",
          justifyContent: "space-between",
        }}
      >
        <Typography variant="h6" fontWeight={700}>
          Running Tasks
        </Typography>
        <IconButton size="small" onClick={onClose}>
          <Close />
        </IconButton>
      </Box>

      {/* CONTENT */}
      <Box sx={{ width: 380, p: 2 }}>
        <Stack spacing={2}>
          {Object.values(tasks).map((task) => {
            const isDone = task.percentage === 100;

            const elapsed = task.startedAt
              ? Math.floor((Date.now() - task.startedAt) / 1000)
              : null;

            const speed =
              task.lastUpdated && task.startedAt && elapsed > 0
                ? task.percentage / elapsed
                : null;

            const eta =
              speed && task.percentage < 100
                ? Math.ceil((100 - task.percentage) / speed)
                : null;

            return (
              <Box
                key={task.taskId}
                sx={{
                  p: 2,
                  borderRadius: 2,
                  bgcolor: "background.paper",
                  boxShadow: 1,
                  cursor: "pointer",
                }}
                onClick={() =>
                  setExpanded(
                    expanded === task.taskId ? null : task.taskId
                  )
                }
              >
                {/* HEADER ROW */}
                <Stack
                  direction="row"
                  alignItems="flex-start"
                  spacing={1}
                  sx={{ minWidth: 0 }}
                >
                  {/* FILE NAME (FULLY VISIBLE) */}
                  <Typography
                    variant="body2"
                    fontWeight={600}
                    sx={{
                      flex: 1,
                      minWidth: 0,
                      wordBreak: "break-word",
                      whiteSpace: "normal",
                      overflowWrap: "anywhere",
                    }}
                  >
                    {task.taskId}
                  </Typography>

                  {/* STATUS CHIP (FULLY VISIBLE) */}
                  <Box sx={{ flexShrink: 0 }}>
                    <CustomChip
                      size="sm"
                      variant="outlined"
                      sx={{ height: "100%", whiteSpace: "nowrap" }}
                      color={
                        statusColor[task.status?.toUpperCase()] ||
                        "default"
                      }
                      label={
                        task.status
                          ? task.status.charAt(0).toUpperCase() +
                            task.status.slice(1).toLowerCase()
                          : "Unknown"
                      }
                      icon={
                        statusIcon[task.status?.toUpperCase()] ||
                        statusIcon.default
                      }
                    />
                  </Box>
                </Stack>

                {/* PROGRESS SECTION */}
                <Stack
                  direction="row"
                  justifyContent="space-between"
                  alignItems="center"
                  mt={1.5}
                >
                  <LinearProgress
                    variant="determinate"
                    value={task.percentage}
                    sx={{
                      flex: 1,
                      mr: 1,
                      height: 8,
                      borderRadius: 5,
                      transition: "all 0.4s ease",
                    }}
                    color={isDone ? "success" : "primary"}
                  />

                  <Typography variant="caption">
                    {task.percentage}%
                  </Typography>
                </Stack>

                {/* ETA */}
                {eta && (
                  <Typography variant="caption" mt={0.5}>
                    ETA: ~{eta}s
                  </Typography>
                )}

                {/* DETAILS */}
                <Collapse in={expanded === task.taskId}>
                  <Box mt={1}>
                    <Typography
                      variant="caption"
                      color="text.secondary"
                      display="block"
                    >
                      {task.message}
                    </Typography>

                    {elapsed && (
                      <Typography
                        variant="caption"
                        display="block"
                      >
                        Elapsed: {elapsed}s
                      </Typography>
                    )}
                  </Box>
                </Collapse>
              </Box>
            );
          })}
        </Stack>
      </Box>
    </Drawer>
  );
};

export default TaskProgressDrawer;
